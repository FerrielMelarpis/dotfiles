[user]
	name = Gadzhi Kharkharov
	email = me@kkga.me
[credential]
	helper = cache --timeout=999999999
[diff]
    tool = kitty
    guitool = kitty.gui
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitty kitty +kitten diff $LOCAL $REMOTE
[core]
	excludesfile = ~/.gitignore
	editor = nvim
[alias]
	ci = commit
    co = checkout
    br = branch
    st = status
[hub]
	protocol = https
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

bar {
    #position top
    #status_command while date +'%Y-%m-%d %l:%M:%S %p'; do sleep 1; done
    #status_command while ~/.config/sway/sway_bar/sway_bar.sh; do sleep 1; done
    swaybar_command waybar
    #status_command i3status
    font pango:M+ 1mn 10
    separator_symbol "  "
    colors {
         background $bg0_h
         statusline $gray
         separator $gray

         focused_workspace  $fg $fg $bg
         active_workspace   $bg $bg $fg4
         inactive_workspace $bg $bg $fg4
         urgent_workspace   $red $red $fg0
         binding_mode       $red $red $fg0
    }
}